@using AspCore_Course.Models
@model Product
@{
    Layout = null;
}
<div class="span3">
            	    <div class="product">
            	        <div class="product-img">
                            <div class="picture">
                                <img src="/Cover/@Model.ImageName" alt="" width="540" height="374" />
                                <div class="img-overlay">
                                    <a href="/File/ShowProduct/@Model.Id" class="btn more btn-primary">توضیحات بیشتر</a>
                                    <a asp-controller="File" asp-action="AddToCard" asp-route-id="@Model.Id" class="btn buy btn-danger">اضافه به سبد خرید</a>
                                </div>
                            </div>
                        </div>
                        <div class="main-titles no-margin">
                            <h4 class="title">@Model.ProductPrice</h4>
                            <h5 class="no-margin">@Model.ProductName</h5>
                        </div>
                        <p class="desc">@Model.Desc</p>
                        <p class="center-align stars">
                            <span class="icon-star stars-clr"></span>
                            <span class="icon-star stars-clr"></span>
                            <span class="icon-star"></span>
                            <span class="icon-star"></span>
                            <span class="icon-star"></span>
                             
                        </p>
            	    </div>
            	</div> <!-- /product -->